<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:background="#00a8ff"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/app_name"
            android:textAlignment="center" />

    </androidx.appcompat.widget.Toolbar>

    <com.example.glcv4android.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <HorizontalScrollView
        android:id="@+id/HScrowview"
        android:background="#dcdde1"
        android:layout_below="@+id/texture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scrollbars="none" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/binary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/color_binary_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/edge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edge_selector"
                android:layout_marginStart="30dp"
                android:button="@null"
                android:checked="false"
                android:gravity="center" />
            <RadioButton
                android:id="@+id/Blur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:layout_marginStart="30dp"
                android:background="@drawable/blur_selector"
                android:gravity="center" />
            <RadioButton
                android:id="@+id/facedetect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:background="@drawable/face_detect_selector"
                android:button="@null"
                android:checked="false"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/SSDDetect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:background="@drawable/ssd_detect_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center" />



            <RadioButton
                android:id="@+id/F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/G"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:textSize="18sp" />
        </RadioGroup>
    </HorizontalScrollView>
    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HScrowview"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#00a8ff">

        <Button
            android:id="@+id/picture"
            android:background="@drawable/take_photo_selector"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/info"
            android:contentDescription="@string/description_info"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:padding="20dp"
            android:src="@drawable/ic_action_info" />

    </FrameLayout>

</RelativeLayout>

